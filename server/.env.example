# Server configuration
PORT=4000
# Comma-separated list of allowed origins for CORS. Use * to allow all (development only)
ALLOWED_ORIGINS=*
# Trust proxy configuration for accurate IP detection behind reverse proxies
# Set to 'true' when running behind nginx, Docker, or cloud load balancers
# Can also be set to specific values like 'loopback' or IP addresses
TRUST_PROXY=true

# SQLite database file path (relative or absolute)
DB_FILE=./data.sqlite3

# Bcrypt salt rounds
BCRYPT_ROUNDS=12

# JWT configuration
# IMPORTANT: Change JWT_SECRET in production
JWT_SECRET=change-me
JWT_EXPIRES_IN=1h

# Purchase rate limiting (per-user per-product)
# Max quantity allowed within the time window (must be a positive integer)
PURCHASE_RATE_LIMIT_PER_PRODUCT=1
# Size of the sliding window in seconds (must be a positive integer)
PURCHASE_RATE_LIMIT_WINDOW_SECONDS=60

# Seeding
# Default password used for generated users by the seeder (server/seed.js)
# You can override via environment or CLI when running the seed script
SEED_PASSWORD=Passw0rd!
